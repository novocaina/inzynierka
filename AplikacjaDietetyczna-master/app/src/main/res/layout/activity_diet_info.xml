<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context=".DietInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:background="#F0F4C3"

        android:orientation="vertical"
        >



        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="30sp"

            android:gravity="center_horizontal"

            android:text="@string/give_height"

            android:textColor="@android:color/black"

            android:textSize="20sp"

            android:textStyle="bold" />



        <EditText

            android:id="@+id/height_txt"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:layout_marginTop="10sp"

            android:ems="6"

            android:inputType="number|numberDecimal"

            android:textAlignment="center"

            android:textColor="@android:color/background_dark"

            android:textSize="20sp" />



        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="30sp"

            android:gravity="center_horizontal"

            android:text="@string/give_weight"

            android:textColor="@android:color/black"

            android:textSize="20sp"

            android:textStyle="bold" />



        <EditText

            android:id="@+id/weight_txt"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:layout_marginTop="10sp"

            android:ems="6"

            android:inputType="number|numberDecimal"

            android:textAlignment="center"

            android:textColor="@android:color/background_dark"

            android:textSize="20sp" />



        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="30sp"

            android:gravity="center_horizontal"

            android:text="@string/give_age"

            android:textColor="@android:color/black"

            android:textSize="20sp"

            android:textStyle="bold" />



        <EditText

            android:id="@+id/age_txt"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:layout_marginTop="10sp"

            android:ems="6"

            android:inputType="number"

            android:textAlignment="center"

            android:textColor="@android:color/background_dark"

            android:textSize="20sp" />



        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="30sp"

            android:gravity="center_horizontal"

            android:text="@string/select_sex"

            android:textColor="@android:color/black"

            android:textSize="20sp"

            android:textStyle="bold" />



        <Spinner

            android:id="@+id/sex_list"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:layout_marginLeft="80sp"

            android:layout_marginRight="80sp"

            android:textAlignment="center"

            android:backgroundTint="@android:color/black" />



        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="30sp"

            android:gravity="center_horizontal"

            android:text="@string/select_activity"

            android:textColor="@android:color/black"

            android:textSize="20sp"

            android:textStyle="bold" />



        <Spinner

            android:id="@+id/activity_list"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:layout_marginLeft="10sp"

            android:layout_marginRight="10sp"

            android:textAlignment="center"

            android:backgroundTint="@android:color/black" />



        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="30sp"

            android:gravity="center_horizontal"

            android:text="@string/select_target"

            android:textColor="@android:color/black"

            android:textSize="20sp"

            android:textStyle="bold" />



        <Spinner

            android:id="@+id/target_list"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:layout_marginLeft="60sp"

            android:layout_marginRight="60sp"

            android:textAlignment="center"

            android:backgroundTint="@android:color/black" />



        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="30sp"

            android:gravity="center_horizontal"

            android:text="@string/prefer"

            android:textColor="@android:color/black"

            android:textSize="20sp"

            android:textStyle="bold" />



        <Spinner

            android:id="@+id/pref_list"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:layout_marginLeft="90sp"

            android:layout_marginRight="90sp"

            android:textAlignment="center"

            android:backgroundTint="@android:color/black" />



        <Button

            android:id="@+id/save_btn"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"

            android:layout_marginTop="25dp"

            android:backgroundTint="#008000"

            android:ems="8"

            android:text="@string/save_data"

            android:textSize="25sp"

            android:textStyle="bold" />





    </LinearLayout>
</ScrollView>