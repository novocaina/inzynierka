<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:layout_margin="10sp"
    tools:context=".CPMFragment">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F4C3"
        android:padding="15dp"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/height"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/heightcpm_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/editbox_background"
            android:drawableStart="@drawable/icons8_length_24"
            android:ems="10"
            android:hint="@string/give_height"
            android:inputType="number|numberDecimal"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/weight"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <EditText
            android:id="@+id/weightcpm_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/editbox_background"
            android:drawableStart="@drawable/icons8_scale_24"
            android:ems="10"
            android:hint="@string/give_weight"
            android:inputType="number|numberDecimal"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="@string/age"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/age_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/editbox_background"
            android:drawableStart="@drawable/icons8_user"
            android:ems="10"
            android:hint="@string/give_age"
            android:inputType="number|numberDecimal"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="@string/select_sex"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/sex_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80sp"
            android:layout_marginRight="80sp"
            android:backgroundTint="@android:color/black"
            android:textAlignment="center" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="@string/select_activity"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/activity_list"
            android:spinnerMode="dropdown"
            android:background="@android:drawable/editbox_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/cpm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:ems="8"
            android:text="@string/calc_cpm"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/your_cpm_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="@string/day_cal"
            android:textAlignment="center"
            android:textColor="#37474F"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/cpm_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>