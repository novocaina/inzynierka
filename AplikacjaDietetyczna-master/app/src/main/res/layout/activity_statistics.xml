<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".Statistics">



    <com.jjoe64.graphview.GraphView

        android:layout_width="match_parent"

        android:layout_height="350dp"

        android:id="@+id/scatterPlot"/>



    <Button
        android:text="Add Point"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddPt"
        android:layout_below="@+id/scatterPlot"/>

    <EditText
        android:background="@android:drawable/editbox_background"
        android:textAlignment="center"

        android:hint="x"

        android:layout_width="wrap_content"

        android:layout_height="40dp"

        android:inputType="numberSigned"

        android:ems="10"

        android:layout_below="@+id/scatterPlot"

        android:layout_alignParentStart="true"

        android:id="@+id/numX"/>



    <EditText

        android:background="@android:drawable/editbox_background"

        android:textAlignment="center"

        android:hint="y"

        android:layout_width="wrap_content"

        android:layout_height="40dp"

        android:inputType="numberSigned"

        android:ems="10"

        android:layout_below="@+id/numX"

        android:layout_alignParentStart="true"

        android:id="@+id/numY"/>

    <Button
        android:text="@string/date_picker"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDatePick"
        android:layout_below="@+id/numY"/>





</RelativeLayout>