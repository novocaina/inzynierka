<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:layout_margin="10sp"
    tools:context=".StatisticChartFragment">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F4C3"
        android:padding="15dp"
        android:orientation="vertical">

    <com.jjoe64.graphview.GraphView

        android:id="@+id/scatterPlot"
        android:layout_width="match_parent"
        android:layout_height="350dp" />

        <Button
            android:id="@+id/btnDatePick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:backgroundTint="#008000"
            android:ems="8"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/date_picker" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="@string/weight"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"/>

    <EditText
        android:id="@+id/numX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background"
        android:drawableStart="@drawable/icons8_scale_24"
        android:ems="10"
        android:hint="@string/give_weight"
        android:inputType="number|numberDecimal"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />


        <Button
            android:id="@+id/btnAddPt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:backgroundTint="#008000"
            android:ems="8"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/add_point" />
    </LinearLayout>
</ScrollView>